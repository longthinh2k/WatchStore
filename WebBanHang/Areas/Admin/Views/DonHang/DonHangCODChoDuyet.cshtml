@model IEnumerable<WebBanHang.Models.EF.tbl_Donhang>
@{
    ViewBag.Title = "DonHangCODChoDuyet";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:300px;">Quản Lý Đơn Hàng</h2>
<ul class="nav nav-tabs" style="margin-left:300px; display:flex; justify-content:space-around;">

    <li role="presentation" class="active"> <button type="button" class="btn btn-success" data-mdb-ripple-color="dark"><a href="@Url.Action("DonHangATM","DonHang")" style="font-weight:bold; color:floralwhite; ">Đơn hàng ATM</a></button></li>
    <li role="presentation">   <button type="button" class="btn btn-success" data-mdb-ripple-color="dark"><a style="color:floralwhite; " href="@Url.Action("DonHangCOD","DonHang")">  Đơn Hàng COD</a></button></li>
    <li role="presentation">   <button type="button" class="btn btn-success" data-mdb-ripple-color="dark"><a style="color:floralwhite; " href="@Url.Action("DonHangCODChoDuyet","DonHang")">  Đơn Hàng COD (chờ duyệt)</a></button></li>

</ul>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="margin-left:300px;">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.tenkhachhang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trangthai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tongtien)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.trangthaidathang)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.tenkhachhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangthai)
            </td>
            <td>
                @Convert.ToDouble(item.tongtien).ToString("#,### VNĐ")
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.trangthaidathang)
            </td>
            <td>
                @*<button type="button" class="btn fontt btn-outline-warning " data-mdb-ripple-color="dark">      @Html.ActionLink("Sửa", "Edit", new { id = item.madonhang })    </button>*@
                <button type="button" class="btn  btn-outline-primary " data-mdb-ripple-color="dark">  @Html.ActionLink("Duyệt", "DuyetDonHang", new { id = item.madonhang })   </button>
                <button type="button" class="btn  btn-outline-warning" data-mdb-ripple-color="dark" style="text-decoration:none; color:floralwhite;">    @Html.ActionLink("Chi tiết", "Details", new { id = item.madonhang })     </button>
                <button type="button" class="btn  btn-outline-info" data-mdb-ripple-color="dark">      @Html.ActionLink("Xóa", "Delete", new { id = item.madonhang })  </button>

            </td>
        </tr>
    }

</table>


<style>
    .btn a:hover {
        color: #fff;
    }

</style>




