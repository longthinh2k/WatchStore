@model IEnumerable<WebBanHang.Models.EF.tbl_ThanhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<button type="button" class="btn btn-outline-danger" style="margin-left:300px; margin-top:50px;" data-mdb-ripple-color="dark"> <a href="/Admin/TaiKhoan/Create"> Thêm tài khoản mới</a>  </button>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="margin-left:280px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>

            <td>
                <button type="button" class="btn btn-outline-warning" data-mdb-ripple-color="dark">   @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaThanhVien })    </button>
                <button type="button" class="btn btn-outline-success" data-mdb-ripple-color="dark" style="text-decoration:none; color:floralwhite;">    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaThanhVien })    </button>
                <button type="button" class="btn btn-outline-info" data-mdb-ripple-color="dark">   @Html.ActionLink("Xóa", "Delete", new { id = item.MaThanhVien })  </button>

            </td>
        </tr>
    }

</table>
<style>

    .btn a:hover {
        color: #fff;
    }
</style>