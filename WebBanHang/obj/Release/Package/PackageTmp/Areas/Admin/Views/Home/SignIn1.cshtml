    <link rel="icon" href="~/Assets/images/fevicon/fevicon.png" type="image/gif" />
    <!-- button-->
    <link href="~/Assets/css/button/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <!-- Gio hang-->

    <link href="~/Assets/giohang/giohang.css" rel="stylesheet" />
    <link href="~/Assets/giohang/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
