    <link rel="=stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!-- font awesome style -->
    <link href="~/Assets/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/Assets/css/responsive.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>

<body>

    <div class="container" id="container">
        <div class="form-container sign-up-container">

        </div>
        <div class="form-container sign-in-container">
            <form action="#">
                <h1>Đăng nhập </h1>
                <div class="social-container">

                    <a href="#" class="social"><img src="~/Assets/Admin/icon/administrator.png" style="width:60px;" /></a>
                    <a href="#" class="social"><img src="~/Assets/Admin/icon/administrator.png" style="width:60px;" /></a>
                    <a href="#" class="social"><img src="~/Assets/Admin/icon/administrator.png" style="width:60px;" /></a>
                </div>
                <span>Trang quản trị MENTIME</span>
                <div class="form-group">
                  
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.TaiKhoan, new { type = "text", @class = "form-control", placeholder = "Tên đăng nhập" })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })

                        <br />

                        @Html.TextBoxFor(m => m.MatKhau, new { type = "password", @class = "form-control", placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        <h5 style="color:red;">@ViewBag.ThongBao</h5> <br />
                        <button type="submit" class="btn btn-danger">Đăng nhập</button>
                    }
                    </div>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1> CÓ THỂ BẠN ĐÃ BIẾT</h1>
                    <p style="font-size:20px;">Ấn dô đây chỉ để đổi chiều</p>
                    <button class="ghost" id="signIn">Đổi chiều lại</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>WHAT'S UP BRO !!!</h1>
                    <p style="font-size:20px;">Chần chừ gì nữa đăng nhập vào để duyệt đơn hàng đi kìa</p>
      
                </div>
            </div>
        </div>
    </div>


    <script src="~/Assets/login/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
</body>
</html>












