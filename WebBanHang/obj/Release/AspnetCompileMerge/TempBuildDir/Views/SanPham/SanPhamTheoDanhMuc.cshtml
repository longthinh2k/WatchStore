
@{
    ViewBag.Title = "SanPhamTheoDanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<WebBanHang.Models.EF.tbl_SanPham>

<section class="product_section ">
    <div class="container">
        <div class="product_heading">
            <h2>
                Sản phẩm về @ViewBag.Tendanhmuc
            </h2>
        </div>
        <div class="product_container">
            @foreach (var item in Model)
            {
            <div class="box">
                <div class="box-content">
                    <div class="img-box">
                        <img src="@item.anhsp1" alt="">
                    </div>
                    <div class="detail-box">
                        <div class="text">
                            <h6>
                                <a href="../ChiTietSP/Index/@item.masp">
                                    @item.tensp
                                </a>
                            </h6>
                            <h5>
                                @Convert.ToSingle(item.giasanpham).ToString("#,### VND")
                            </h5>
                        </div>
                        <div class="like">
                            <h6>
                                Đánh Giá
                            </h6>
                            <div class="star_container">
                                @for (var i = 1; i <= int.Parse(item.danhgiasanpham); i++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="btn-box">
                    <button class="mycart-button">
                        <span class="add-to-cart">@Ajax.ActionLink("Thêm Vào Giỏ Hàng", "ThemGioHang", "GioHang", new { @iMaSP = item.masp, @strURL = Request.Url.ToString() }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "GioHangdiv", InsertionMode = InsertionMode.Replace }, new { @class = "form-control btn " })</span>
                        @*<span class="added">Thêm thành công</span>*@
                        <i class='bx bxs-cart'></i>
                        <i class='bx bxl-bitcoin'></i>
                    </button>


                </div>
            </div>
            }
        </div>
    </div>
</section>