
@{
    ViewBag.Title = "DonHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var session = Session["USER_SESSION"] as WebBanHang.Common.UserLogin;
}
@model List<WebBanHang.Models.EF.tbl_Donhang>




<table class="table" style="margin-left:300px;">
    <tr>

        <th>
            Tên người nhận
        </th>
        <th>

            Số điện thoại
        </th>
        <th>

            Địa chỉ
        </th>
        <th>

        Ngày đặt
        </th>
        <th>

            Hình thức thanh toán
        </th>
        <th>
            Mã giảm giá
        </th>
        <th>
            Tổng tiền
        </th>
        <th>

            Trạng thái đặt hàng
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {

<tr>

    <td>

        @Html.DisplayFor(modelItem => item.tenkhachhang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.sdt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.diachi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ngaydathang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.trangthai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.magiamgia)
    </td>
    <td>
        @Convert.ToDouble(item.tongtien).ToString("#,### VNĐ")
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.trangthaidathang)
    </td>


    <td>


        <button type="button" class="btn fontt btn-outline-warning" data-mdb-ripple-color="dark" style="text-decoration:none; color:floralwhite;"> @Html.ActionLink("Chi tiết", "Details", new { id = item.madonhang })  </button>
        <button type="button" class="btn fontt btn-outline-info" data-mdb-ripple-color="dark">  @Html.ActionLink("Xóa", "Delete", new { id = item.madonhang })   </button>

    </td>
</tr>
    }
</table>

